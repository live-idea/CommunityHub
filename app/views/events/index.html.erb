<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Date</th>
    <th>Place</th>
    <th>Place long</th>
    <th>Place latt</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.description %></td>
    <td><%= event.date %></td>
    <td><%= event.place %></td>
    <td><%= event.place_long %></td>
    <td><%= event.place_latt %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_community_event_path(@community, event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

